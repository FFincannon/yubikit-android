<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:id="@+id/yubikit_otp_content_view"
    android:layout_margin="@dimen/yubikit_otp_activity_margin"
    android:gravity="center"
    tools:context=".OtpActivity">

    <TextView
        android:layout_marginBottom="@dimen/yubikit_otp_text_margin"
        android:id="@+id/yubikit_otp_user_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/yubikit_otp_activity_subtitle"/>

    <ImageView
        app:srcCompat="@drawable/ykfamily"
        android:contentDescription="@string/yubikit_otp_plug_in_or_tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/yubikit_otp_text_margin"
        android:id="@+id/yubikit_otp_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/yubikit_otp_plug_in_or_tap"/>
</LinearLayout>